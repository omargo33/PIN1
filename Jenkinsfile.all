pipeline {
  agent any

  options {
    timeout(time: 2, unit: 'MINUTES')
  }

  environment {
    ARTIFACT_ID = "elbuo8/webapp:${env.BUILD_NUMBER}"
  }
   stages {
   stage('Building image') {
      steps{
          sh '''
          docker build -t testapp .
             '''  
        }
    }
  
  
    stage('Run tests') {
      steps {
        sh "docker run testapp npm test"
      }
    }
   stage('Deploy Image') {
      steps{
        sh '''
        docker tag testapp 127.0.0.1:5000/mguazzardo/testapp
        docker push 127.0.0.1:5000/mguazzardo/testapp   
        '''
        }
      }
  

    stage('Pass To K8s'){
        steps {
        sh '''
	sshpass -p '12341234s' ssh 172.18.5.35 -l root -o StrictHostKeyChecking=no "minikube kubectl create deployment testapp --image=127.0.0.1:5000/mguazzardo/testapp"        
       echo "Wait"
       sleep 10
       sshpass -p 'master' ssh 192.168.101.147 -l root -o StrictHostKeyChecking=no "minikube kubectl expose deployment testapp --port=3000"
       sshpass -p 'master' ssh 192.168.101.147 -l root -o StrictHostKeyChecking=no "wget https://raw.githubusercontent.com/tercemundo/platzi-scripts-integracion/master/webapp/nodePort.yml"
       sshpass -p 'master' ssh 192.168.101.147 -l root -o StrictHostKeyChecking=no "minikube kubectl apply -f nodePort.yml" 

           '''

            }
        }
	


    }
}
